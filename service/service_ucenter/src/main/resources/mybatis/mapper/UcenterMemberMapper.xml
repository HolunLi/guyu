<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.holun.ucenter.mapper.UcenterMemberMapper">

    <!--DATE函数用于获取日期中的年月日-->
    <select id="countRegisterDay" parameterType="string" resultType="integer">
        select count(*)
        from ucenter_member
        where DATE(gmt_create) = #{day}
    </select>

</mapper>